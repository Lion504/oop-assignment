<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="currencyPU" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <!-- These will be overridden by JPAUtil with values from database.properties -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/currency_converter_db"/>
            <property name="jakarta.persistence.jdbc.user" value="appuser"/>
            <property name="jakarta.persistence.jdbc.password" value="apppass123"/>

            <!-- Let JPA create the schema automatically based on entity annotations -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <!-- Hibernate specific properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
